{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.courtlistener.legalbot",
  "developer": {
    "name": "Your Organization",
    "websiteUrl": "https://yourwebsite.com",
    "privacyUrl": "https://yourwebsite.com/privacy",
    "termsOfUseUrl": "https://yourwebsite.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Court Listener Bot",
    "full": "Court Listener Legal Research Bot"
  },
  "description": {
    "short": "Search case law and court opinions",
    "full": "AI-powered bot for searching court opinions, dockets, and case law using the Court Listener database. Get instant access to legal research within Microsoft Teams."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "Search Opinions",
              "description": "Search for court opinions by keywords"
            },
            {
              "title": "Search Dockets",
              "description": "Search for dockets and cases"
            },
            {
              "title": "Court Info",
              "description": "Get information about courts"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": []
}
